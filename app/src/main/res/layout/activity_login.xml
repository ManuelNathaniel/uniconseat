<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">


    <TableLayout
        android:id="@+id/table1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="1sp"
        android:gravity="center_vertical"
        android:shrinkColumns="0,1,2">

        <TableRow
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            style="@style/InputBoxStyle"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:text="申请码："
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"/>

                <EditText
                    android:id="@+id/edit_apply"
                    style="@style/EditTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="8"
                    android:gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_alignBaseline="@+id/apply"
                    android:layout_alignBottom="@+id/apply"
                    android:layout_toRightOf="@+id/apply"
                    android:layout_toEndOf="@+id/apply"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorPrimaryDark"/>
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:id="@+id/row0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            style="@style/InputBoxStyle"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/verify"
                    android:text="验证码："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"/>


                <EditText
                    android:id="@+id/edit_verify"
                    style="@style/EditTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:inputType="text"
                    android:ems="8"
                    android:layout_alignBaseline="@+id/verify"
                    android:layout_alignBottom="@+id/verify"
                    android:layout_toRightOf="@+id/verify"
                    android:layout_toEndOf="@+id/verify"
                    android:textColor="@color/colorPrimaryDark"/>
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            style="@style/InputBoxStyle"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/authorize"
                    android:text="授权码："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"/>


                <EditText
                    android:id="@+id/edit_authorize"
                    style="@style/EditTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:inputType="text"
                    android:ems="8"
                    android:layout_alignBaseline="@+id/authorize"
                    android:layout_alignBottom="@+id/authorize"
                    android:layout_toRightOf="@+id/authorize"
                    android:layout_toEndOf="@+id/authorize"
                    android:textColor="@color/colorPrimaryDark"/>
            </RelativeLayout>
        </TableRow>

        <TextView
            android:id="@+id/verifytips"
            android:text="将申请码和验证复制完毕一同提交给发行方，即可获得激活码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#88888888"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_marginTop="50sp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center">
                <Button
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="20dp"
                    android:text="点我激活"
                    android:background="@drawable/button_shape"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/act_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/submit"
                    android:layout_marginStart="20dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@drawable/button_shape"
                    android:text="联系我"
                    android:textSize="16sp" />
            </RelativeLayout>
        </TableRow>

    </TableLayout>
<!--marginStart 以屏幕左边缘为原始轴线算起       marginLeft-->
</RelativeLayout>